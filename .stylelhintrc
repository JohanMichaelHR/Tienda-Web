{
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": 4,
      "string-quotes": "double",
      "selector-class-pattern": "^[a-z][a-z0-9]*(_[a-z0-9]+)*$",
      "color-hex-case": "lower",
      "selector-max-id": 0,
      "no-invalid-double-quotes": null
    },
    "ignoreFiles": ["**/node_modules/**"]
  }